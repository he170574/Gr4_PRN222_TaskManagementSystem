@page
@model CMS2.Pages.Admin.UserDetailsModel
@using UserModel = CMS2.Models.User
@{
    ViewData["Title"] = "User Details";
    Layout = null;
    var user = Model.CurrentUser;
    var successMessage = TempData["SuccessMessage"] as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>User Details</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body class="bg-gray-100">
    <div class="min-h-screen flex items-center justify-center px-4">
        <div class="bg-white shadow-xl rounded-lg p-8 w-full max-w-2xl">
            <div class="mb-6 flex justify-between items-center">
                <h2 class="text-2xl font-bold text-gray-800">User Details</h2>
                <a href="/Admin/AdminDashboard" class="text-blue-600 hover:underline">← Back to Dashboard</a>
            </div>

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="bg-green-100 border border-green-300 text-green-800 px-4 py-2 rounded mb-4 text-sm">
                    @successMessage
                </div>
            }

            @if (user is not null)
            {
                <div class="grid grid-cols-2 gap-4 mb-6 text-sm text-gray-700">
                    <div><strong>ID:</strong> @user.Id</div>
                    <div><strong>Username:</strong> @user.Username</div>
                    <div><strong>Email:</strong> @user.Email</div>
                    <div><strong>Role:</strong> @user.Role</div>
                    <div><strong>Created At:</strong> @user.CreatedAt.ToString("yyyy-MM-dd HH:mm")</div>
                    <div>
                        <strong>Status:</strong>
                        <span class="font-semibold @(user.IsActive ? "text-green-600" : "text-red-600")">
                            @(user.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                </div>

                <!-- Change Password -->
                <form method="post" asp-page-handler="ChangePassword" class="mb-4">
                    <input type="hidden" name="Id" value="@user.Id" />
                    <label class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                    <div class="flex">
                        <input asp-for="NewPassword" type="password" class="input flex-grow" placeholder="Enter new password" />
                        <button type="submit" class="btn btn-sm btn-primary ml-2">Change Password</button>
                    </div>
                </form>

                <!-- Toggle Active -->
                <form method="post" asp-page-handler="ToggleActive" class="mb-4">
                    <input type="hidden" name="Id" value="@user.Id" />
                    <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-warning" : "btn-success")">
                        @(user.IsActive ? "Deactivate" : "Activate")
                    </button>
                </form>

                <!-- Delete User -->
                <form method="post" asp-page-handler="DeleteUser" onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <input type="hidden" name="Id" value="@user.Id" />
                    <button type="submit" class="btn btn-sm btn-danger">Delete User</button>
                </form>
            }
            else
            {
                <p class="text-red-500">User not found.</p>
            }
        </div>
    </div>
    <script src="~/js/app.min.js"></script>
</body>
</html>
