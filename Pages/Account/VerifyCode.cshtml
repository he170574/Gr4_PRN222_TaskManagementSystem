@page "/Account/VerifyCode"
@model CMS2.Pages.Account.VerifyCodeModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Verify Code</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body class="flex items-center justify-center h-screen bg-gray-100">
    <div class="w-full max-w-md p-6 bg-white rounded shadow">
        <h2 class="text-2xl font-semibold mb-4 text-center">Enter Verification Code</h2>
        <p class="text-sm text-gray-600 mb-6 text-center">We’ve sent a 6-digit code to your email address.</p>

        <form method="post">
            <div class="mb-4">
                <input asp-for="EnteredCode" class="input w-full" placeholder="Enter OTP Code" />
                <span asp-validation-for="EnteredCode" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="btn btn-solid w-full">Verify</button>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p class="text-red-600 text-sm mt-4 text-center">@Model.ErrorMessage</p>
            }
        </form>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
