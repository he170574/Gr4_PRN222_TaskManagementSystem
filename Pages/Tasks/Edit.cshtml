@page
@model CMS2.Pages.Tasks.EditModel
@{
    Layout = null;
    ViewData["Title"] = "Edit Task";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Task - Task Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .glass-effect {
            backdrop-filter: blur(15px);
            background: rgba(255, 255, 255, 0.95);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
        .form-field {
            transition: all 0.3s ease;
        }
        .form-field:focus-within {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }
        .input-group {
            position: relative;
        }
        .input-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #6b7280;
            z-index: 10;
        }
        .input-with-icon {
            padding-left: 2.5rem;
        }
        .floating-label {
            position: absolute;
            left: 2.5rem;
            top: 50%;
            transform: translateY(-50%);
            color: #6b7280;
            transition: all 0.3s ease;
            pointer-events: none;
            background: white;
            padding: 0 4px;
        }
        .input-field:focus + .floating-label,
        .input-field:not(:placeholder-shown) + .floating-label {
            top: 0;
            left: 2rem;
            font-size: 0.75rem;
            color: #3b82f6;
            font-weight: 500;
        }
        .status-option {
            transition: all 0.2s ease;
        }
        .status-option:hover {
            background: #f3f4f6;
        }
        .save-btn {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            transition: all 0.3s ease;
        }
        .save-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
        }
        .progress-bar {
            height: 3px;
            background: linear-gradient(90deg, #10b981 0%, #3b82f6 50%, #8b5cf6 100%);
            border-radius: 999px;
            animation: pulse 2s ease-in-out infinite alternate;
        }
        @@keyframes pulse {
            0% { opacity: 0.6; }
            100% { opacity: 1; }
        }
        .form-section {
            animation: slideUp 0.6s ease-out;
        }
        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body class="gradient-bg min-h-screen py-8 px-4">
    <div class="max-w-2xl mx-auto">
        <!-- Header Section -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-white bg-opacity-20 rounded-full mb-4">
                <i class="fas fa-edit text-2xl text-white"></i>
            </div>
            <h1 class="text-4xl font-bold text-white mb-2">Edit Task</h1>
            <p class="text-blue-100">Modify your task details and keep everything organized</p>
            <div class="progress-bar w-24 mx-auto mt-4"></div>
        </div>

        <!-- Main Form Card -->
        <div class="glass-effect rounded-2xl shadow-2xl overflow-hidden">
            <!-- Card Header -->
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-6 text-white">
                <div class="flex items-center space-x-3">
                    <div class="bg-white bg-opacity-20 rounded-full p-3">
                        <i class="fas fa-tasks text-xl"></i>
                    </div>
                    <div>
                        <h2 class="text-2xl font-bold">Task Information</h2>
                        <p class="text-blue-100">Update the details below</p>
                    </div>
                </div>
            </div>

            <!-- Form Content -->
            <div class="p-8">
                <form method="post" class="space-y-8">
                    <input type="hidden" asp-for="Task.Id" />
                    
                    <!-- Title Field -->
                    <div class="form-section">
                        <div class="form-field bg-gray-50 rounded-xl border-2 border-gray-200 focus-within:border-blue-500 focus-within:bg-white">
                            <label class="block text-sm font-semibold text-gray-700 mb-3 px-4 pt-4">
                                <i class="fas fa-heading mr-2 text-blue-500"></i>
                                Task Title
                            </label>
                            <div class="input-group px-4 pb-4">
                                <input asp-for="Task.Title" 
                                       class="w-full px-4 py-3 border-0 rounded-lg bg-transparent focus:outline-none focus:ring-0 text-lg font-medium placeholder-gray-400"
                                       placeholder="Enter a descriptive title for your task..." />
                            </div>
                            <span asp-validation-for="Task.Title" class="text-red-500 text-sm px-4 pb-2 block"></span>
                        </div>
                    </div>

                    <!-- Description Field -->
                    <div class="form-section" style="animation-delay: 0.1s;">
                        <div class="form-field bg-gray-50 rounded-xl border-2 border-gray-200 focus-within:border-blue-500 focus-within:bg-white">
                            <label class="block text-sm font-semibold text-gray-700 mb-3 px-4 pt-4">
                                <i class="fas fa-align-left mr-2 text-green-500"></i>
                                Description
                            </label>
                            <div class="input-group px-4 pb-4">
                                <textarea asp-for="Task.Description" 
                                         rows="4"
                                         class="w-full px-4 py-3 border-0 rounded-lg bg-transparent focus:outline-none focus:ring-0 resize-none placeholder-gray-400"
                                         placeholder="Provide detailed information about this task..."></textarea>
                            </div>
                            <span asp-validation-for="Task.Description" class="text-red-500 text-sm px-4 pb-2 block"></span>
                        </div>
                    </div>

                    <!-- Due Date Field -->
                    <div class="form-section" style="animation-delay: 0.2s;">
                        <div class="form-field bg-gray-50 rounded-xl border-2 border-gray-200 focus-within:border-blue-500 focus-within:bg-white">
                            <label class="block text-sm font-semibold text-gray-700 mb-3 px-4 pt-4">
                                <i class="fas fa-calendar-alt mr-2 text-orange-500"></i>
                                Due Date & Time
                            </label>
                            <div class="input-group px-4 pb-4">
                                <input asp-for="Task.DueDate" 
                                       type="datetime-local" 
                                       class="w-full px-4 py-3 border-0 rounded-lg bg-transparent focus:outline-none focus:ring-0 text-lg" />
                            </div>
                            <span asp-validation-for="Task.DueDate" class="text-red-500 text-sm px-4 pb-2 block"></span>
                        </div>
                    </div>

                    <!-- Status Field -->
                    <div class="form-section" style="animation-delay: 0.3s;">
                        <div class="form-field bg-gray-50 rounded-xl border-2 border-gray-200 focus-within:border-blue-500 focus-within:bg-white">
                            <label class="block text-sm font-semibold text-gray-700 mb-3 px-4 pt-4">
                                <i class="fas fa-flag mr-2 text-purple-500"></i>
                                Task Status
                            </label>
                            <div class="input-group px-4 pb-4">
                                <select asp-for="Task.Status" 
                                        class="w-full px-4 py-3 border-0 rounded-lg bg-transparent focus:outline-none focus:ring-0 text-lg cursor-pointer">
                                    <option value="Pending" class="status-option">📋 Pending - Not started yet</option>
                                    <option value="In Progress" class="status-option">⚡ In Progress - Currently working on it</option>
                                    <option value="Completed" class="status-option">✅ Completed - Task finished</option>
                                </select>
                            </div>
                            <span asp-validation-for="Task.Status" class="text-red-500 text-sm px-4 pb-2 block"></span>
                        </div>
                    </div>

                    <!-- Priority Field (New Addition) -->
                    <div class="form-section" style="animation-delay: 0.4s;">
                        <div class="form-field bg-gray-50 rounded-xl border-2 border-gray-200 focus-within:border-blue-500 focus-within:bg-white">
                            <label class="block text-sm font-semibold text-gray-700 mb-3 px-4 pt-4">
                                <i class="fas fa-exclamation-circle mr-2 text-red-500"></i>
                                Priority Level
                            </label>
                            <div class="px-4 pb-4">
                                <div class="grid grid-cols-3 gap-3">
                                    <label class="flex items-center p-3 border-2 rounded-lg cursor-pointer hover:bg-green-50 hover:border-green-300 transition-all">
                                        <input type="radio" name="Priority" value="Low" class="sr-only" />
                                        <div class="priority-indicator w-4 h-4 rounded-full bg-green-400 mr-3"></div>
                                        <span class="font-medium text-gray-700">Low</span>
                                    </label>
                                    <label class="flex items-center p-3 border-2 rounded-lg cursor-pointer hover:bg-yellow-50 hover:border-yellow-300 transition-all">
                                        <input type="radio" name="Priority" value="Medium" class="sr-only" checked />
                                        <div class="priority-indicator w-4 h-4 rounded-full bg-yellow-400 mr-3"></div>
                                        <span class="font-medium text-gray-700">Medium</span>
                                    </label>
                                    <label class="flex items-center p-3 border-2 rounded-lg cursor-pointer hover:bg-red-50 hover:border-red-300 transition-all">
                                        <input type="radio" name="Priority" value="High" class="sr-only" />
                                        <div class="priority-indicator w-4 h-4 rounded-full bg-red-400 mr-3"></div>
                                        <span class="font-medium text-gray-700">High</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="form-section flex flex-col sm:flex-row sm:justify-between space-y-4 sm:space-y-0 sm:space-x-4 pt-6" style="animation-delay: 0.5s;">
                        <a href="/Tasks/ViewAll" 
                           class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            <i class="fas fa-arrow-left mr-2"></i>
                            Cancel Changes
                        </a>
                        <button type="submit" 
                                class="save-btn inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-semibold rounded-xl text-white shadow-lg transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                            <i class="fas fa-save mr-2"></i>
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>

            <!-- Footer Tips -->
            <div class="bg-gradient-to-r from-blue-50 to-purple-50 border-t border-gray-200 p-6">
                <div class="flex items-start space-x-3">
                    <div class="flex-shrink-0">
                        <i class="fas fa-lightbulb text-yellow-500 text-lg"></i>
                    </div>
                    <div>
                        <h4 class="font-semibold text-gray-800 mb-2">💡 Quick Tips</h4>
                        <ul class="text-sm text-gray-600 space-y-1">
                            <li>• Use descriptive titles to easily identify tasks later</li>
                            <li>• Set realistic due dates to avoid overwhelming your schedule</li>
                            <li>• Update status regularly to track your progress effectively</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Back to Dashboard Link -->
        <div class="text-center mt-8">
            <a href="/User/UserDashboard" class="inline-flex items-center space-x-2 text-white hover:text-blue-200 transition-colors">
                <i class="fas fa-home"></i>
                <span>Back to Dashboard</span>
            </a>
        </div>
    </div>

    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-resize textarea
            const textarea = document.querySelector('textarea');
            if (textarea) {
                textarea.addEventListener('input', function() {
                    this.style.height = 'auto';
                    this.style.height = this.scrollHeight + 'px';
                });
            }

            // Priority selection
            const priorityRadios = document.querySelectorAll('input[name="Priority"]');
            priorityRadios.forEach(radio => {
                radio.addEventListener('change', function() {
                    // Remove checked styles from all labels
                    priorityRadios.forEach(r => {
                        r.closest('label').classList.remove('border-green-400', 'border-yellow-400', 'border-red-400', 'bg-green-50', 'bg-yellow-50', 'bg-red-50');
                        r.closest('label').classList.add('border-gray-200');
                    });
                    
                    // Add checked style to selected label
                    const label = this.closest('label');
                    label.classList.remove('border-gray-200');
                    if (this.value === 'Low') {
                        label.classList.add('border-green-400', 'bg-green-50');
                    } else if (this.value === 'Medium') {
                        label.classList.add('border-yellow-400', 'bg-yellow-50');
                    } else if (this.value === 'High') {
                        label.classList.add('border-red-400', 'bg-red-50');
                    }
                });
            });

            // Form validation enhancement
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                const title = document.querySelector('input[asp-for="Task.Title"]').value.trim();
                const dueDate = document.querySelector('input[asp-for="Task.DueDate"]').value;
                
                if (!title) {
                    e.preventDefault();
                    alert('Please enter a task title.');
                    return;
                }
                
                if (!dueDate) {
                    e.preventDefault();
                    alert('Please select a due date.');
                    return;
                }

                // Show loading state
                const submitBtn = document.querySelector('button[type="submit"]');
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Saving...';
                submitBtn.disabled = true;
            });

            // Keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                if (e.ctrlKey && e.key === 's') {
                    e.preventDefault();
                    form.submit();
                }
                if (e.key === 'Escape') {
                    if (confirm('Are you sure you want to cancel? Any unsaved changes will be lost.')) {
                        window.location.href = '/Tasks/ViewAll';
                    }
                }
            });
        });
    </script>
</body>
</html>
</html>